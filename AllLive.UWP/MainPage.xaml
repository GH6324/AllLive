<Page
    x:Class="AllLive.UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AllLive.UWP"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
   
    <Grid>
        <muxc:NavigationView x:Name="navigationView" PaneTitle="聚合直播" PaneDisplayMode="Top" SelectionChanged="NavigationView_SelectionChanged" IsBackButtonVisible="Collapsed">
            <muxc:NavigationView.AutoSuggestBox>
                <AutoSuggestBox QueryIcon="Find" PlaceholderText="搜索直播间" Width="160" AutomationProperties.Name="Search"></AutoSuggestBox>
            </muxc:NavigationView.AutoSuggestBox>


            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem IsSelected="True" Icon="Home" Content="推荐" Tag="RecomendPage"></muxc:NavigationViewItem>
                <muxc:NavigationViewItem Icon="ViewAll" Content="分类" Tag="CategoryPage"></muxc:NavigationViewItem>
                <muxc:NavigationViewItem Icon="Link" Content="直链" Tag="ParsePage"></muxc:NavigationViewItem>
                <muxc:NavigationViewItem Icon="OutlineStar" Content="收藏" Tag="FavoritePage"></muxc:NavigationViewItem>
                <muxc:NavigationViewItem Icon="Clock" Content="观看记录" Tag="HistoryPage"></muxc:NavigationViewItem>
            </muxc:NavigationView.MenuItems>
            <muxc:NavigationView.Content>
                <Frame x:Name="frame"></Frame>
               
            </muxc:NavigationView.Content>
        </muxc:NavigationView>

    </Grid>
</Page>
